<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recAdopt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/value_70"
            android:clipToPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_topic_adoption" />

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/value_24"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/tvAppHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextPoppinsBold24"
                android:text="Pet for adoption"
                android:textColor="@color/primary_dark"/>
            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-8dp"
                style="@style/TextPoppinsBold20"
                android:text="Letâ€™s Explore Together"
                android:textColor="@color/text_gray"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
