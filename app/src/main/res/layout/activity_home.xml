<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".ui.home.HomeActivity">

        <TextView
            style="@style/TextPoppinsRegular22"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/value_16"
            android:textAllCaps="true"
            android:textColor="@color/text_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/home" />
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/value_40"
            android:layout_height="@dimen/value_40"
            android:scaleType="fitCenter"
            android:padding="@dimen/value_2"
            android:layout_margin="@dimen/value_14"
            android:elevation="@dimen/value_16"
            app:strokeColor="@color/white"
            app:strokeWidth="@dimen/value_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle"
            app:srcCompat="@drawable/img_place_holder"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivNotificationBell2"
            android:layout_width="@dimen/value_20"
            android:layout_height="@dimen/value_20"
            app:contentPadding="@dimen/value_4"
            android:elevation="@dimen/value_16"
            android:scaleType="centerInside"
            android:background="@color/white"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="-4dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle"
            app:srcCompat="@drawable/ic_notification_fill_red"
            app:layout_constraintTop_toTopOf="@id/ivAvatar"
            app:layout_constraintStart_toStartOf="@id/ivAvatar"/>

        <com.myha.petadoption.ui.customView.HomeBottomNavView
            android:id="@+id/home_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/value_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:selected="home" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>