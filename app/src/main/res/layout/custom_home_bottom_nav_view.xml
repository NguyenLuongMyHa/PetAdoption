<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_80"
            android:background="@drawable/bg_dark_20"
            android:paddingStart="@dimen/value_18"
            android:paddingEnd="@dimen/value_18"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">


            <ImageView
                android:id="@+id/iv_indicator"
                android:layout_width="@dimen/value_24"
                android:layout_height="@dimen/value_4"
                android:layout_marginBottom="@dimen/value_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/layout_home"
                app:layout_constraintStart_toStartOf="@id/layout_home"
                app:srcCompat="@drawable/bg_white_4" />

            <LinearLayout
                android:id="@+id/layout_home"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="@dimen/value_18"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toStartOf="@id/layout_location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/iv_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_home_outline" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_location"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="@dimen/value_18"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toStartOf="@id/layout_explore"
                app:layout_constraintStart_toEndOf="@id/layout_home"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:srcCompat="@drawable/ic_location_outline" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_explore"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="@dimen/value_18"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toStartOf="@id/layout_discuss"
                app:layout_constraintStart_toEndOf="@id/layout_location"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/iv_explore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:srcCompat="@drawable/ic_explore_outline" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_discuss"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="@dimen/value_18"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layout_explore"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/iv_discuss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_discuss_outline" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
