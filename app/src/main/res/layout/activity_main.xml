<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.myha.petadoption.customView.CustomAvatarView
        android:layout_width="@dimen/value_50"
        android:layout_height="@dimen/value_50"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/avt1"
        android:layout_margin="@dimen/value_2"
        app:hasFollow="false"
        app:layout_constraintStart_toStartOf="parent" />

    <com.myha.petadoption.customView.CustomAvatarView
        android:id="@+id/avt2"
        android:layout_width="@dimen/value_50"
        android:layout_height="@dimen/value_50"
        android:layout_margin="@dimen/value_2"
        app:hasFollow="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avt1"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/value_2" />

    <com.myha.petadoption.customView.CustomAvatarView
        android:id="@+id/avt3"
        android:layout_width="@dimen/value_50"
        android:layout_height="@dimen/value_50"
        android:layout_margin="@dimen/value_2"
        app:hasFollow="true"
        app:icFollowRes="@drawable/ic_follow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avt2"
        app:strokeColor="@color/black"
        app:strokeWidth="@dimen/value_2" />
</androidx.constraintlayout.widget.ConstraintLayout>